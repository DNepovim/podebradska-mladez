<!DOCTYPE html>

{default $activeLang = get_active_lang_code()}

<html lang="{$activeLang}">
<head>
	{include components/gtm/head.latte}
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width,initial-scale=1">

	<title>{site_title()}</title>

	<meta name="description" content="{get_bloginfo('description')|noescape}">

	{use_google_fonts([ 'Ubuntu:300,400&subset=latin-ext'])}

	<link rel="stylesheet" href="{$assetsPath}/styles/{$buildstamp}index.css" media="screen">
	<link rel="stylesheet" href="{$assetsPath}/styles/{$buildstamp}print.css" media="print">

	{* <link rel="shortcut icon" type="image/x-icon" href="{$basePath}/favicon.ico"> *}
	<link rel="icon" type="image/png" href="{$assetsPath}/images/favicon.png?v=2" sizes="16x16">
	<link rel="icon" type="image/png" href="{$assetsPath}/images/favicon-32x32.png?v=2" sizes="32x32">

	<!--[if lt IE 9]>
	<link rel="stylesheet" href="{$assetsPath}/styles/{$buildstamp|noescape}oldie.css" media="screen">
	<script src="{$assetsPath}/node_modules/lt-ie-9/lt-ie-9.min.js"></script>
	<![endif]-->

	{block head}{/block}

	<script>
		initComponents = [{
			name: 'parallax',
			place: '#parallax'
		}]
	</script>

	{wp_head()}

</head>
<body>

	{include components/gtm/body.latte}

	{$mangoSnippet}


	<input type="checkbox" class="burger-check" id="burger-check">

	<div id="parallax" class="site-background" data-speed="3">
		<img class="site-background-img" src="{wp_get_attachment_image_src($site_background)|noescape}" srcset="{wp_get_attachment_image_srcset($site_background)|noescape}" sizes="{wp_get_attachment_image_srcset($row[image][0])|noescape}" alt="{$row[image_caption]}">
	</div>

	{block content}{/block}

	{block scripts}
		{analytics()}
		{*eu_cookies($activeLang)*}
		<script src="//ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js" defer></script>
		<script src="{$assetsPath}/scripts/{$buildstamp}index.js" defer></script>
	{/block}

	{wp_footer()}

</body>
</html>
