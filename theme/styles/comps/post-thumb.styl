.post-thumb
	margin-bottom 1rem
	padding 1rem 0.7rem
	background-color $blank

	&:after
		content ''
		display block
		clear both

	.title
		margin-top 0.6em

		a
			text-decoration none

	&-image
		margin-bottom 1rem

		img
			max-width 100%
			width 100%
			height auto
			margin 0

	&-subtitle
		margin 0

	@media $break.s
		.title
			margin-top 0

		&-image
			float left
			margin-right 1rem
			margin-bottom 0.5rem
			width 35%
			min-height 4rem

			img
				max-width 100%
