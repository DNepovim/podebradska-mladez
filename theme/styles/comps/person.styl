.person
	margin-bottom 2rem

	&-title
		font-size 2.2rem
		color $brand
		letter-spacing 0.05em
		margin 0 0 0.5em


	&-image
		width 100%
		height 60vw
		background-size cover
		background-position center center
		background-repeat no-repeat


	&:after
		content ''
		display block
		clear both

	$media (min-width 768px)
		&-image
			height 400px

	$media (min-width 992px)
		&-image
			height 200px


