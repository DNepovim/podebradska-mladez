.event-thumb
	margin-bottom 1rem

	&:after
		content ''
		display block
		clear both

	&-image
		float left
		margin-right 1rem
		width 35%
		min-height 1rem

		img
			max-width 100%
			height auto

	&-content
		display inline-block
		width 60%

	&-subtitle
		margin 0

	&-hashtags
		max-width 27rem
