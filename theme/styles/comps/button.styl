.button
	display block
	background $brand
	color $blank
	text-align center
	width 100%
	margin 1rem 0
	padding 0.5em 1em
	border-radius $radius
	transition background 300ms

	&:hover
		color $blank
		background $black


	&visited
		color $blank


	&-caption
		display block
		font-size 0.8rem


	&-title
		display block
		font-size 1.2rem


	&.view-call
		background $messenger
		&:hover
			color $blank
			background $brand



