.text
	letter-spacing 0.02em
	line-height 1.5em

	h2
		color $brand
		font-size 2.4rem
		margin 0 0 0.6em

	h3
		font-size 1.4em
		margin 1.2em 0 0.4em

	blockquote
		color $brand
		font-style italic;
		padding 0 0 0 1em;
		border-left 5px solid #1b750242;

	&.view-low
		font-size 0.8rem
		margin 0

	&.view-hight
		padding 0
		margin-bottom 0

		a
			color $brand
			font-weight 500
			text-decoration underline
