.calendar
	width 100%

	&-list
		width 100%
		font-size 0

	&-name, &-date
		display inline-block
		font-size 1rem
		padding 0.5em


	&-name
		width 60%

	&-date
		color $brand
		font-weight bold
		font-size 0.9rem
		line-height 1.2rem
		text-align right
		width 40%


	&-description
		color $brand
		font-size 0.8rem
		margin 0
		padding 0


