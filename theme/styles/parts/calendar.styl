.calendar
	background-color $transparent-box
	margin-top 0.3em
	float left
	clear both
	transition background-color 300ms

	&-name
	&-date
		float left
		clear both

	&-name
		color $brand
		line-height 1em
		margin 0

		a
			&:hover
				text-decoration none

	&-date
		font-size 0.6rem
		margin-bottom 1em



