.site-cover
	position relative
	size 100% 20rem
	overflow hidden

	&-img
		absolute right 0 left 0
		width 100%

		&.view-top
			top 0
		&.view-middle
			top -50%
		&.view-bottom
			bottom 0

	&-titles
		position absolute
		z-index 10
		margin 0
		top 6rem

	&-title
		display inline-block
		color $brand
		background-color $blank
		font-size 4rem
		margin-bottom 0.4rem
		text-decoration none

	&-sub
		color $blank
		background-color $brand
		font-size 1.6rem
		text-decoration none

	.container
		margin-top 5rem
